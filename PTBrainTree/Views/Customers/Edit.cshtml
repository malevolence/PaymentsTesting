@model Customer
@{
	ViewBag.Title = "Edit Customer";
}

@Html.ValidationSummary()

<form method="post" action="@Url.Action("Edit", new { id = Model.Id })" class="form-horizontal">
	<fieldset>
		<legend>Customer Details</legend>
		<div class="form-group">
			<label for="Id" class="control-label col-sm-3">Username</label>
			<div class="col-sm-9">
				<p class="form-control-static">@Model.Id</p>
			</div>
		</div>
		<div class="form-group">
			<label for="FirstName" class="control-label col-sm-3">Customer Name</label>
			<div class="col-sm-9">
				<div class="row">
					<div class="col-sm-6">
						@Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", placeholder = "First Name" })
						@Html.ValidationMessageFor(x => x.FirstName)
					</div>
					<div class="col-sm-6">
						@Html.TextBoxFor(x => x.LastName, new { @class = "form-control", placeholder = "Last Name" })
						@Html.ValidationMessageFor(x => x.LastName)
					</div>
				</div>
			</div>
		</div>
		<div class="form-group">
			<label for="Company" class="control-label col-sm-3">Company Name</label>
			<div class="col-sm-9">
				@Html.TextBoxFor(x => x.Company, new { @class = "form-control", placeholder = "Company Name" })
				@Html.ValidationMessageFor(x => x.Company)
			</div>
		</div>
		<div class="form-group">
			<label for="Email" class="control-label col-sm-3">Email</label>
			<div class="col-sm-9">
				@Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email Address" })
				@Html.ValidationMessageFor(x => x.Email)
			</div>
		</div>
		<div class="form-group">
			<label for="Phone" class="control-label col-sm-3">Phone</label>
			<div class="col-sm-9">
				@Html.TextBoxFor(x => x.Phone, new { @class = "form-control", placeholder = "Phone Number" })
				@Html.ValidationMessageFor(x => x.Phone)
			</div>
		</div>
		<div class="form-group">
			<label for="Website" class="control-label col-sm-3">Website</label>
			<div class="col-sm-9">
				@Html.TextBoxFor(x => x.Website, new { @class = "form-control", placeholder = "Website" })
				@Html.ValidationMessageFor(x => x.Website)
			</div>
		</div>
	</fieldset>
	<div class="form-group">
		<div class="col-sm-9 col-sm-offset-3">
			<button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-ok"></span> Save Changes</button>
		</div>
	</div>
</form>